<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kist.portal.common.aprv.mapper.AprvMapper">

	<insert id="insertAprv" parameterType="sqlMap">
       insert into tb_co_aprv(
			aprv_no
			,arpv_cd
			,biz_no
			,aprv_usr_id
			,aprv_stt_cd
			,aprv_mthd_nm
			,aprv_ttl
			,aprv_cntn
			,aprv_note
			,usg_yn
			,crt_usr_id
			,crt_dt
			,upt_usr_id
			,upt_dt
		) values (
				#{aprv_no}
				,#{arpv_cd}
				,#{biz_no}
				,#{aprv_usr_id}
				,#{aprv_stt_cd}
				,#{aprv_mthd_nm}
				,#{aprv_ttl}
				,#{aprv_cntn}
				,#{aprv_note}
				,'T'
			   ,#{SESS_USR_ID}
			   ,to_char(now(), 'YYYYMMDDHH24MISS')
			   ,#{SESS_USR_ID}
			   ,to_char(now(), 'YYYYMMDDHH24MISS')
		)
    </insert>
    
    <select id="selectAprvkey" parameterType="sqlMap" resultType="string">
		/* selectAprvkey */
		select nextval('tb_co_aprv_seq'::regclass)::text as aprv_no
	</select>
    
</mapper>