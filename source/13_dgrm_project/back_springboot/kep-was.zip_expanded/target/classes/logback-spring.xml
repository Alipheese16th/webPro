<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration scan="true" scanPeriod="30 seconds"> 
    <springProperty scope="context" name="LOG_PATH" source="logging.file.path"/>
    <springProperty scope="context" name="APP_NAME" source="spring.application.name"/>
    <!-- property resource="logback.properties" /-->

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%5p] ${PID:- } --- [%15.15t] %-40.40logger{39} : %m%n
            </pattern>
        </layout>
    </appender>
    
    <appender name="FILE_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize> <!-- each log file size cannot exceed 10 mega bytes  -->
            </timeBasedFileNamingAndTriggeringPolicy>
            <totalSizeCap>1GB</totalSizeCap> <!-- Total size 1GB, if occur overflow, delete ealy log -->
            <maxHistory>10</maxHistory> <!-- only have 10 days of history -->
        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%5p] [${APP_NAME:-},%X{X-B3-TraceId:-},%X{X-B3-SpanId:-},%X{X-Span-Export:-}] ${PID:- } --- [%15.15t] %-40.40logger{39} : %m%n
            </pattern>
        </encoder>
    </appender>
    <appender name="SQL_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}_sql.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_PATH}/${APP_NAME}_sql.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize> <!-- each log file size cannot exceed 10 mega bytes  -->
            </timeBasedFileNamingAndTriggeringPolicy>
            <totalSizeCap>1GB</totalSizeCap> <!-- Total size 1GB, if occur overflow, delete ealy log -->
            <maxHistory>10</maxHistory> <!-- only have 10 days of history -->
        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%5p] [${APP_NAME:-},%X{X-B3-TraceId:-},%X{X-B3-SpanId:-},%X{X-Span-Export:-}] ${PID:- } --- [%15.15t] %-40.40logger{39} : %m%n
            </pattern>
        </encoder>
    </appender>
 
    <springProfile name="local">
        <root>
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    <springProfile name="dev">
        <root>
            <appender-ref ref="FILE_LOG"/>
        </root>
        <logger name="SQL_LOG" additivity="false">
            <appender-ref ref="SQL_LOG"/>
        </logger>
    </springProfile>
    <springProfile name="stg">
        <root>
            <appender-ref ref="FILE_LOG"/>
        </root>
        <logger name="SQL_LOG" additivity="false">
            <appender-ref ref="SQL_LOG"/>
        </logger>
    </springProfile>
    <springProfile name="prd">
        <root>
            <appender-ref ref="FILE_LOG"/>
        </root>
        <logger name="SQL_LOG" additivity="false">
            <appender-ref ref="SQL_LOG"/>
        </logger>
    </springProfile>
</configuration>